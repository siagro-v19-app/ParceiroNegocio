<mvc:View controllerName="br.com.idxtec.ParceiroNegocio.controller.ParceiroNegocio"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false" class="sapUiContentPadding" enableScrolling="false">
				<content>
					<t:Table id="tableParceiro"
						rows="{
							path: '/ParceiroNegocios',
							sorter: {
								path: 'RazaoSocial'
							}
						}"
						selectionMode="Single"
						selectionBehavior="Row"
						class="sapUiSizeCondensed"
						visibleRowCountMode="Auto"
						enableBusyIndicator="true"
						alternateRowColors="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Parceiros"/>
								<ToolbarSpacer/>
								<SearchField placeholder="Pesquisar parceiro..." width="30%" search="filtraParceiro"/>
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column id="columnEmpresa" filtered="true" width="10%" >
								<Label text="Empresa" wrapping="true"/>
								<t:template>
									<Text text="{Empresa}" wrapping="false"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Código"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column id="columnRazao" filterProperty="RazaoSocial" sortProperty="RazaoSocial">
								<Label text="Razão Social"/>
								<t:template>
									<Text text="{RazaoSocial}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Filial" sortProperty="Filial">
								<Label text="Filial"/>
								<t:template>
									<Text text="{Filial}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button id="incluir" text="Incluir novo" press="onIncluir" type="Emphasized"/>
						<Button id="editar" text="Editar" press="onEditar"/>
						<Button id="remover" text="Remover" press="onRemover"/>
						<ToolbarSeparator/>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>