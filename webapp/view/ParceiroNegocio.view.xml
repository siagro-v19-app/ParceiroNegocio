<mvc:View controllerName="br.com.idxtec.ParceiroNegocio.controller.ParceiroNegocio"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
xmlns:t="sap.ui.table">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<t:Table id="tableParceiro"
						rows="{path: '/ParceiroNegocios'}"
						alternateRowColors="true"
						enableSelectAll="false"
						threshold="15"
						enableBusyIndicator="true">
						<t:toolbar>
							<Toolbar>
								<Title text="Lista de Parceiros de Negócio"/> 
							</Toolbar>
						</t:toolbar>
						<t:columns>
							<t:Column filterProperty="Codigo" sortProperty="Codigo">
								<Label text="Razão Social"/>
								<t:template>
									<Text text="{Codigo}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="RazaoSocial" sortProperty="RazaoSocial">
								<Label text="Razão Social"/>
								<t:template>
									<Text text="{RazaoSocial}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="NomeFantasia" sortProperty="NomeFantasia">
								<Label text="Nome Fantasia"/>
								<t:template>
									<Text text="{NomeFantasia}"/>
								</t:template>
							</t:Column>
							<t:Column filterProperty="Cnpj" sortProperty="Cnpj">
								<Label text="CNPJ"/>
								<t:template>
									<Text text="{Cnpj}"/>
								</t:template>
							</t:Column>
						</t:columns>
					</t:Table>
				</content>
				<footer>
					<Toolbar>
						<Button icon="sap-icon://refresh" press="onRefresh"/>
						<ToolbarSpacer/>
						<Button text="Incluir novo" press="onIncluir"/>
						<Button text="Editar" press="onEditar"/>
						<Button text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>